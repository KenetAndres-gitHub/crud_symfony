<form method="post" action="{{ path('app_person_edit', {'id': person.id}) }}">
    <div class="form-group">
        <input type="text" name="first_name" class="form-control" placeholder="Nombres" value="{{ person.firstName }}">
    </div>
    <div class="form-group">
        <input type="text" name="last_name" class="form-control" placeholder="Apellidos" value="{{ person.lastName }}">
    </div>
    <div class="form-group">
        <input type="date" name="birthdate" class="form-control" placeholder="Fecha Nacimiento" value="{{ person.birthdate|date('Y-m-d') }}">
    </div>
    <button type="submit" class="button">Guardar</button>
</form>