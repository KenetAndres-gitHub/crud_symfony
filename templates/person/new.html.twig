{% extends 'base.html.twig' %}

{% block title %}New Person{% endblock %}

{% block stylesheets %}
    <style>
        /* Estilos */
        .form-container {
            width: 50%;
            margin: 0 auto;
            padding: 20px;
            border-radius: 10px;
            background: linear-gradient(to bottom right, #6b54f0, #2196f3);
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: none;
            border-radius: 5px;
            background-color: #f5f5f5;
        }

        .button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #3f51b5;
            color: #fff;
            text-decoration: none;
        }

    </style>
{% endblock %}

{% block body %}
    <h1>Create new Person</h1>
    <div class="form-container">
        <form method="post" action="{{ path('app_person_new') }}">
            <div>
                <input type="text" name="first_name" class="form-control" placeholder="First Name">
            </div>
            <div>
                <input type="text" name="last_name" class="form-control" placeholder="Last Name">
            </div>
            <div>
                <input type="date" name="birthdate" class="form-control" placeholder="Birthdate">
            </div>
            <button type="submit" class="button">Save</button>
        </form>
    </div>
    

    
    <a href="{{ path('app_person_index') }}" class="button">back to list</a>
{% endblock %}
