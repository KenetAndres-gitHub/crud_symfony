{% extends 'base.html.twig' %}

{% block title %}New Person{% endblock %}

{% block stylesheets %}
    <style>
        /* Estilos */
        body {
            font-family: Arial, sans-serif;
            background-color: #121212; /* Color de fondo s√≥lido y oscuro */
            color: #fff;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            padding: 20px;
        }

        .button {
            display: inline-block;
            padding: 8px 15px;
            background-color: #3f51b5; /* Color primario */
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
            border: none;
        }

        .button:hover {
            background-color: #1eb4ff; /* Color secundario */
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Create new Person</h1>

    <div style="width: 50%; margin: 0 auto; padding: 20px; border-radius: 10px; background: linear-gradient(to bottom right, #6b54f0, #2196f3);">
        {{ include('person/_form.html.twig') }}
    </div>

    <a href="{{ path('app_person_index') }}" class="button">back to list</a>
{% endblock %}
